<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="BookLibrary.Shell"        
        Title="Book Library" 
        d:DesignHeight="450"
        d:DesignWidth="650"
        xmlns:prism="http://www.codeplex.com/prism"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        mc:Ignorable="d">

    <Grid>

        <ContentControl prism:RegionManager.RegionName="MainRegion" Content="{Binding CurrentViewModel}" Height="430" Width="630"/>

        <DockPanel Margin="473,0,0,386">
            <Button Width="75"
            	Height="23"
            	Command="{Binding ListViewCommand}"
            	Content="ListView" DockPanel.Dock="Left"/>
            <Button Width="75"
            	Height="23"
            	Command="{Binding ShelfViewCommand}"
            	Content="ShelfView" DockPanel.Dock="Right"/>
        </DockPanel>

    </Grid>


</Window>